<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:keepScreenOn="true"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.clement.projetquiz.TableauActivity">

<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/monTableau"
    android:dividerHeight="1px"
    android:divider="@color/colorNoir"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="100dp" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str_reset"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:textColor="@color/colorBlanc"
    android:id="@+id/resetTab"
    android:onClick ="viderTab"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/bouton_rouge"
    android:textAllCaps="false" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str_retour"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:textColor="@color/colorBlanc"
    android:id="@+id/button4"
    android:onClick="retourner"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="@drawable/btn_bleumarine"
    android:textAllCaps="false" />

</RelativeLayout>
