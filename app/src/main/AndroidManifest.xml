        android:icon="@mipmap/ic_quiz"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/str_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrincipaleActivity"
            android:label="@string/ttl_question"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ResultatsActivity"
            android:label="@string/ttl_resultat"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TableauActivity"
            android:label="@string/title_activity_tableau" >
        </activity>
        <activity
            android:name=".CategoriesActivity"
            android:label="@string/title_activity_categories"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:label="@string/str_option"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
